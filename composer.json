{
    "name": "%owner%/%repoName%",
    "description": "%repoName%",
    "authors": [
        {
            "name": "%companyName%",
            "email": "%developerMail%",
            "homepage": "%homepage%",
            "role": "Developer"
        }
    ],
    "type": "shopware-platform-plugin",
    "version": "1.0.0",
    "license": "proprietary",
    "autoload": {
        "psr-4": {
            "%namespace%\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "%namespace%\\Test\\": "tests/"
        }
    },
    "require": {
        "shopware/core": "~6.4",
        "shopware/storefront": "~6.4",
        "shopware/administration": "~6.4"
    },
    "require-dev": {
        "phpstan/phpstan": "1.8.0"
    },
    "extra": {
        "shopware-plugin-class": "%namespace%\\%basePluginClassName%",
        "label": {
            "de-DE": "Shopware admin label",
            "en-GB": "Shopware admin label"
        },
        "description": {
            "de-DE": "Shopware description",
            "en-GB": "Shopware description"
        },
        "manufacturerLink": {
            "de-DE": "%homepage%",
            "en-GB": "%homepage%"
        },
        "supportLink": {
            "de-DE": "%homepage%",
            "en-GB": "%homepage%"
        }
    }
}
